concurrent = 10
check_interval = 0
connection_max_age = "15m0s"
shutdown_timeout = 0

[session_server]
    session_timeout = 1800

[[runners]]
    name = "gitlab-runner"
    url = "https://git.wigger.one:8443"
    token = "{% if hostvars[inventory_hostname]['region'] == "CH" %}{{ runner_token_ch }}{% elif hostvars[inventory_hostname]['region'] == "FI" %}{{ runner_token_fi }}{% endif %}"
    executor = "docker"
    limit = 0
    request_concurrency = 1
    [runners.docker]
        image = "alpine:latest"
        privileged = true
        volumes = ["/var/run/docker.sock:/var/run/docker.sock"]
        shm_size = 0
        network_mtu = 0
    [runners.cache]
        Type = "s3"
        Path = "/cache"
        [runners.cache.s3]
            ServerAddress = "{{ s3_url_plain }}"
            AccessKey = "{{ s3_access_key_id }}"
            SecretKey = "{{ s3_secret_access_key }}"
            BucketName = "gitlab-runner"
            BucketLocation = "weur"
