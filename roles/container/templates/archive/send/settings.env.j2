NODE_ENV=production
L10N_DEV=true
# URL
BASE_URL=https://send.wigger.one
DETECT_BASE_URL=true
# Send-Server
IP_ADDRESS=0.0.0.0
PORT=1234
VIRTUAL_PORT=1234
# Redis
#IP_DB
REDIS_HOST=send_keydb
REDIS_PORT=6379
#Custom
CUSTOM_TITLE=Send
CUSTOM_DESCRIPTION=Encrypt and send files with a link that automatically expires to ensure your important documents don’t stay online forever.
SEND_FOOTER_CLI_URL=https://gitlab.com/timvisee/ffsend
SEND_FOOTER_SOURCE_URL=https://gitlab.com/timvisee/send
SEND_FOOTER_DMCA_URL=https://wigger.one/dmca
CUSTOM_FOOTER_TEXT=Status
CUSTOM_FOOTER_URL=https://status.wigger.one
UI_COLOR_PRIMARY=#0a84ff
UI_COLOR_ACCENT=#003eaa
CUSTOM_LOCALE=en
# Local uploads storage
#FILE_DIR=/uploads
#S3
S3_BUCKET=send
S3_ENDPOINT={{ s3_url }}
S3_USE_PATH_STYLE_ENDPOINT=true
AWS_ACCESS_KEY_ID={{ s3_access_key_id }}
AWS_SECRET_ACCESS_KEY={{ s3_secret_access_key }}
# Customize upload limits
EXPIRE_TIMES_SECONDS=300,3600,86400,604800
DEFAULT_EXPIRE_SECONDS=86400
MAX_EXPIRE_SECONDS=604800
DOWNLOAD_COUNTS=1,2,5,10,15
DEFAULT_DOWNLOADS=1
MAX_DOWNLOADS=15
MAX_FILE_SIZE=5368709120
MAX_FILES_PER_ARCHIVE=64
MAX_ARCHIVES_PER_USER=16
